<form action="/cities" method="post">
  <label for="city-name">City Name:</label>
  <input type="text" name="name" id="city-name-field">

  <label for="city-latitude">Latitude:</label>
  <input type="text" name="lat" id="city-lat-field">

  <label for="city-longitude">Longitude:</label>
  <input type="text" name="long" id="city-long-field">

  <label for="country-selection">Country:</label>
  <select name="country_id" id="country-selection" >
    <% @countries.each do |country| %>
        <option value="<%= country.id %>"><%= country.name %></option>
    <% end %>
  </select>

  <input type="submit" value="Add new city">
</form>
