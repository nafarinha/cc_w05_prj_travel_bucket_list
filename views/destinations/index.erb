<table>
  <tr>
    <th>Visited?</th>
    <th>Destination</th>
  </tr>
  <% for destination in @destinations  %>
  <tr>
    <% if destination.is_visited == true %>
    <td>
      <input type="image" id="image" alt="Visited" src="/images/visited.png">
    </td>
    <% else %>
    <td>
      <input type="image" id="image" alt="Not visited" src="/images/not_visited.png">
    </td>
    <% end %>
    <td><a href="/cities/<%= destination.city.id %>"><%= destination.city.name %></a>, <a href="/countries/<%= destination.city.country.id %>"><%= destination.city.country.name %></a></td>

  </tr>
    <% end %>
</table>
