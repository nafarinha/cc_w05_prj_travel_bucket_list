<h1>Countries</h1>

<p>
   <button type="button"><a href="/countries/new">Add new country</a></button>
</p>
<table>
  <tr>
    <th></th>
    <th></th>
    <th>Countries</th>
  </tr>
  <% for country in @countries %>
  <tr>
    <td>
      <form action="/countries/<%= country.id %>/edit" method="GET">
        <input type="image" id="image" alt="Edit" src="/images/edit.png" />
      </form>
    </td>
    <td>
      <form action="/countries/<%= country.id %>/delete" method="POST">
        <input type="image" id="image" alt="Delete" src="/images/delete.png" />
      </form>
    </td>
    <td><a href="/countries/<%= country.id %>"><%= country.name %></a></td>
  </tr>
  <% end %>
</table>
