<form action="/countries/<%= @country.id %>" method="post">
  <label for="country-name-field">Country Name:</label>
  <input type="text" name="name" value="<%= @country.name %>">

  <label for="country-continent-field">Continent</label>
  <input type="text" name="continent" value="<%= @country.continent %>">

  <input type="submit" value="Edit country">

</form>
